<!DOCTYPE html>

<% if @question.errors.any? %>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_for @question do |f| %>
<%= f.text_field :title %>
<%= f.text_area :description, size: "60x12" %>
<%= f.submit "Post" %>
<% end %>
<%= button_to "Delete", @question, :method=>:delete, :class=>:destroy %>
